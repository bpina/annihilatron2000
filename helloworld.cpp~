#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <GL/glew.h>
#include <GL/glut.h>
#include <GL/gl.h>
#include <GL/glu.h>
#include <GL/glext.h>

const int FRAME_WIDTH = 1024;
const int FRAME_HEIGHT = 768;
const char *RESOURCES_DIR = "/home/brian/workspace/helloworld/resources/";

void enable2d( void ) {
	glMatrixMode( GL_PROJECTION );
	glLoadIdentity();
	glOrtho(0, FRAME_WIDTH, FRAME_HEIGHT, 0, 0, 1);
	glMatrixMode( GL_MODELVIEW );

	glDisable( GL_DEPTH_TEST );
}

char* getFilePath(const char *fileName) {
	char *fullPath;
	fullPath = 
    new char[(sizeof(fileName)/sizeof(char)) + (sizeof(RESOURCES_DIR)/sizeof(char))];

	strcpy(fullPath, fileName);
	strcat(fullPath, RESOURCES_DIR);

	return fullPath;
}

GLuint loadTexture(const char *fileName, int width, int height) {
	GLuint texture;
	FILE *resource;
	char *buffer;
	char *filePath = getFilePath(fileName);

	buffer =  (char*)malloc(width * height * sizeof(char));

	resource = fopen( filePath, "RB");
	fread( buffer, width * height * 3, 1, resource );
	fclose( resource );

	free(buffer);

	return texture;
}

int main() {

	enable2d();



	return 0;
}
